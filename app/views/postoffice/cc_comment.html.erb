<html>

<head>



</head>

<body>
	
	
	<style type="text/css">


	body {
		background:#EFEFEF;
	}

	.BlueLink {
		text-decoration:none;
		color:#0066FF;
		cursor:pointer;

	}
	.BlueLink:hover {
		text-decoration:underline;
		color:#0066FF;
	}
	.BlueLink:active {
	color:#0066FF;
	}
	.BlueLink:visited {
	color:#0066FF;
	}

	.SubtleFont {
		font-size:10px;
		color:#777777;
	}
	.commentBox {
		background-color:#F6F6F6; padding-top:3px; font-size:15px; line-height:18px; padding-left:3px; padding-right:3px; 		margin-top:3px; 
	}
	.rounded3d {
		border:1px solid #999;
		@include rounded_corners(7px);
	}
	.Transparent {
		cursor:pointer;
	}
	.Transparent:hover {
		opacity:.8;
	}
	.template_topnav {
		background:#35507C url(http://<%=APP_URL%>/images/topbar-bg3.png) repeat-x;
		border-top:none; 
		@include noselect();
		height:51px;
		margin-top:25px;
		-webkit-border-top-right-radius: 7px;
		-webkit-border-top-left-radius: 7px;
		-moz-border-radius-topright:7px;
		-moz-border-radius-topleft:7px;
		border-top-right-radius:7px;
		border-top-left-radius:7px;

	}

	.template_logo {
	  background:url(http://<%=APP_URL%>/images/home_tile.png) no-repeat;
	  background-position:-150px 0px;
		position:absolute;
		margin-top:9px; 
		margin-left:15px;
		width:131px;
		height:35px;
		cursor:pointer;
	}

	.template_logo_h {
	  background:url(http://<%=APP_URL%>/images/home_tile.png) no-repeat;
	  background-position:0px -175px;
		position:absolute; 
		margin-top:9px; 
		margin-left:15px;
		width:131px;
		height:35px;
		cursor:pointer;
	}

	.whiteMain {
		padding:25px; background:#fff;
		-webkit-border-bottom-right-radius: 7px;
		-webkit-border-bottom-left-radius: 7px;
		-moz-border-radius-bottomright:7px;
		-moz-border-radius-bottomleft:7px;
		border-bottom-right-radius:7px;
		border-bottom-left-radius:7px;
	}
	.powered {
		float:left; margin-left:10px; margin-top:10px; opacity:.8;

	}

	</style>
	

<div style="max-width:650px; min-width:300px; margin-left:auto; margin-right:auto">
	
	
	
	<div class="template_topnav" style="width:100%;">
			<%if @plan.group and @plan.group.logo%>
			<div style="float:left; margin-right:20px;">
				<a href="http://<%=@plan.group.url%>">
					<div style="float:left; margin-left:10px;  margin-right:5px; height:30px; overflow:none">
						
								<%if @plan.group.logo_file_name and @plan.group.logo_file_name != ""%>
									<%=image_tag @plan.group.logo.url(:header), :size => @plan.group.logo.image_size(:header), :style=>"margin-top:3px" %>
								<%else%>
									<div style="line-height:44px; margin-top:3px; font-size:28px; color:#fff; float:left;"><%=@plan.group.name%></div>
								<%end%>
					
					</div>
				</a>
				<a target="_blank" href="http://<%=APP_URL%>/">
						<div class="powered"><img src="http://<%=APP_URL%>/images/powered-by.png"></div>
				</a>
				</div>
				<%@url = @plan.group.url%>
			<%else%>
			<div style="float:left; width:120px;">&nbsp;	</div>
				<a href="http://<%=APP_URL%>/">
					<div class="template_logo_h" onmouseover="logoHover()" onmouseout="logoUnhover()"></div>
					<div class="template_logo" onmouseover="logoHover()"  onmouseout="logoUnhover()" ></div>
				</a>
				<%@url =APP_URL%>
			<%end%>
		
	</div>
	
	<div class="whiteMain">
	
		<div style="font-size:18px; padding-bottom:20px">
		<a class="BlueLink" href="http://<%=@url%>/<%=@comment.user.username%>"><%=@comment.user.first_name%></a> commented on <a class="BlueLink" href="http://<%=@url%>/escapes/<%=@challenge_url%>"><%=raw @plan.title%></a>.
	</div>
	<div class="commentBox">
		<div style="float:left;">
			<a href="http://<%=@url%>/<%=@comment.user.username%>">
				
				<%name = @comment.user.avatar_file_name%>

				<%if name%>
					<%test = name.index(".")%>

					<%if test.to_i < 1%>
						<%name = "#{name}."%>
					<%end%>
					<img class="UserCardPhoto" class="Transparent rounded50" style="width:90px; float:left; margin-right:10px; height:90px;  cursor:pointer" src="http://assets.escapist.me/avatars/<%=@comment.user.id%>/thumb_150_<%=name%>"/>
				<%else%>
					<img alt="No_avatar" class="Transparent rounded50" style="width:90px; float:left; margin-right:10px; height:90px;  cursor:pointer" src="http://escapist.me/images/no_avatar.png" style="" />
				<%end%>
				
			</a>
			 <%=@comment.comment%><div class="SubtleFont" style="margin-top:2px; width:300px;" ><%=time_ago_in_words(@comment.created_at)%> ago</div>
		</div>

		<div style="float:left; margin-left:10px; padding-right:5px;min-width:75px; padding-top:5px;">
		
		</div>
		<div style="clear:both"></div>
	</div>


	<div style="width:100%;  margin-top:20px; border-top:1px dotted #ccc"> </div>




	</div>
	<div style="font-size:12px; margin-left:7px; margin-top:10px">Your notification settings copy all comments to your e-mail. <a class="BlueLink" href="http://<%=APP_URL%>/no_cc.html?user_credentials=<%=@autotoken%>&type=comment">To turn off, click here</a>.</div>
	
	
</div>

</body>

</html>