		          {
		              window.location = '/auth/facebook';
		          }
     }, {perms:'user_about_me,user_birthday,user_location,user_hometown,user_likes,email,user_website'});
   }

	function fblogin2() {
    FB.login(function(response) {
		if(response.session)
		          {
		              window.location = '/auth/facebook';
		          }
     }, {perms:'user_about_me,user_birthday,user_location,user_hometown,user_likes,email,user_website,publish_stream,offline_access'});
   }




</script>




	
</html>
