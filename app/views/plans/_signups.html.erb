<div class="DarkBlueLabel" style="padding-top:20px; padding-bottom:10px;">Hosted by</div>

<%for host in hosts%>
<div style="float:left; margin-bottom:5px">
	<a href="/<%=host.username%>">
		<%= image_tag(host.avatar.url(:rounded_90), :class=>"Transparent rounded3d", :style=>"width:75px; height:75px; cursor:pointer") %>
	</a>
</div>
<div style='float:left; margin-left:10px; padding-top:2px;margin-bottom:5px'><a CLASS="BlueLink" href="/<%=host.username%>"><%=host.first_name%> <%=host.last_name%></a>
	
	<div  class="SubtleShortBio"><%=raw host.short_bio%></div>
	
	<%@disabled = false%>
	<%if current_user%>
		<%if !host.allow_messages_from?(current_user)%>
			<%@disabled = true%>
		<%end%>
		<%if host.id  == current_user.id%>
			<%@disabled = true%>
		<%end%>
	<%end%>
	
	
	<button class="newGrayButton" style="margin-top:5px; width:116px; <%if @disabled%>opacity:.3; cursor:default<%end%>" onclick="<%if !current_user%>openRegister('Sign up for <%=APP_NAME%> to Message <%=host.first_name%>')<%else%><%if !@disabled%>SendMessage('<%=host.first_name%>',<%=host.id%>)<%end%><%end%>"><img style="float:left; height:11px; width:17px; margin-top:4px; margin-left:2px" src="/images/sendmessage.png"><div style="float:left; margin-left:7px">Contact me</div></button>
	
</div>

<div style="clear:both"></div>

<%end%>




<%if @plan.id == 27%>
<div style="clear:both"></div>

	<div class="DarkBlueLabel" style="padding-top:20px; padding-bottom:10px;">Judges</div>

	<%judges = User.find(:all, :conditions=>"id=1316 || id=1318 || id=1321 || id=1319 || id=1320")%>

	<%for host in judges%>
		<div style="float:left; margin-bottom:5px">
			<a href="/<%=host.username%>">
				<%= image_tag(host.avatar.url(:rounded_90), :class=>"Transparent rounded3d", :style=>"width:65px; height:65px; cursor:pointer") %>
			</a>
		</div>
		<div style='float:left; margin-left:10px; padding-top:2px;margin-bottom:5px'>
			<a CLASS="BlueLink" href="/<%=host.username%>"><%=host.first_name%> <%=host.last_name%></a>
			<div  class="SubtleShortBio"><%=raw host.short_bio%></div>
		</div>
		<div style="clear:both"></div>
	<%end%>


<%end%>




<%if @plan.enable_signups%>
<div style="clear:both"></div>

<%if attendees.length > 1%>
	<div class="DarkBlueLabel" style="padding-top:20px; padding-bottom:10px;">Who's coming? <span style="color:#666">(<%=attendees.length + hosts.length%>)</span></div>
	
	<%for host in attendees%>
			<div style="float:left; margin-bottom:5px">
			<a href="/<%=host.username%>">
				<%= image_tag(host.avatar.url(:rounded_90), :class=>"Transparent rounded3d", :style=>"width:65px; height:65px; cursor:pointer") %>
			</a>
		</div>
		<div style='float:left; margin-left:10px; padding-top:2px;margin-bottom:5px'>
			<a CLASS="BlueLink" href="/<%=host.username%>"><%=host.first_name%> <%=host.last_name%></a>
			<div class="SubtleShortBio"><%=raw host.short_bio%></div>
		</div>
		<div style="clear:both"></div>
	<%end%>
<%end%>

<div style="clear:both; height:40px;"></div>
<%end%>
