<%if current_user && @plan.has_signedup?(current_user)%>
	<%@signedup = TRUE%>
	<%@signup_color = "Red"%>
<%else%>
	<%@signedup = FALSE%>
	<%@signup_color = "Green"%>
<%end%>

<%if current_user%>
	<%if @plan.price and @plan.price > 0%>
		<%if @plan.application_required%>
			<%@clickaction = "goToByScroll('ApplicationLayer');"%>
		<%else%>
			<%@clickaction = "payBill();"%>
		<%end%>
	<%else%>
		<%@clickaction = "signupPlan(this,$('RenderPlan<#{@plan.id}'),#{@plan.id});"%>
	<%end%>
<%else%>
	<%if @plan.application_required%>
		<%@clickaction = "goToByScroll('ApplicationLayer');"%>
	<%else%>
		<%@clickaction = "openRegister('Sign up for #{APP_NAME} to attend'); $.cookie('showAttendPop', 'true', { expires: 7, path: '/plans/'});"%>
	<%end%>
<%end%>


<div id="attend"  class="countmein WhiteActiveBorder" style="float:right; margin-right:70px;" onclick="<%=@clickaction%>">
	<div unselectable="on" class="outerB <%=@signup_color%>Button" style="width:180px; line-height:38px; height:50px;">
		<div class="buyticket innerB Inner<%=@signup_color%>Border" style="height:43px; font-size:16px; line-height:40px; padding-top:5px;">		
								
		<%if @plan.application_required%>
			<div style="margin-top:3px; line-height:14px">
				Apply Now!
			</div>
			<div style="font-size:12px; line-height:14px; margin-top:6px;">
				Deadline: <%=@plan.application_deadline.to_date.strftime('%b').titlecase()%> <%=@plan.application_deadline.to_date.strftime('%e').strip()%>
			</div>
		<%else%>
			<%if @plan.price and @plan.price > 0%>
				<div style="position:absolute; margin-left:7px; margin-top:3px;">
					<img src="/images/buy-icon.png" style="width:24px; height:21px">
				</div>
				<div style="margin-left:31px;">
					$<%=@plan.price.to_s.sub( ".0", "") %> per ticket
				</div>
			<%else%>
				<%if @signedup%>
					I'm coming
				<%else%>
					Sign Up for FREE
				<%end%>
			<%end%>
		<%end%>
	</div>
  </div>
</div>



<div style="clear:both"></div>
<%if @plan.seats_remaining != 0 and @plan.seats_remaining < 10 %>
	<%if current_user && @plan.has_signedup?(current_user)%>	
<%else%>
	<div style="text-align:center; ; margin-right:70px; padding-top:15px; font-size:14px; font-weight:bold; color:red"><b><%=@plan.seats_remaining%></b> ticket<%if @plan.seats_remaining !=1%>s<%end%> left!</div><%end%>
<%end%>
	
	
<%t = Time.zone.now%>
<%rounded_t = Time.local(t.year, t.month, t.day, 0, 0)%>
<%if rounded_t >= @plan.start_time%>
	<div style="text-align:center; ; margin-right:70px; padding-top:15px; font-size:14px; font-weight:bold; color:red">
		This plan is over
	</div>
<%end%>
