</div>


<div style="float:right; width:300px; margin-right:40px; margin-top:50px;">
	
	<span class="HighlightedTitle">Don't want to use Facebook?  It's ok.  Sign up below.</span>
	<div style="padding-top:10px; padding-bottom:10px;">Already have an account?  <a href="#" onclick="openLoginDrop($('#LoginButton')); ignoreHide=1;" class="BlueLink">Log in</a>.</div>
	
     	<% form_for @user, :html => { :id => 'RegisterForm' }  do |form| %>
			<div class="RegisterLabel">Name</div>
			<input id="name" name="name" type="textfield" class="TextBox RegisterBox" size="30">
	
		
		
			<div style="clear:both; position:relative; height:10px; "></div>
			
			<div class="RegisterLabel"><%= form.label :email %></div>
			<%= form.text_field :email, :class => "TextBox RegisterBox" %>
			
			<div style="clear:both; position:relative; height:10px; "></div>
			
				<div class="RegisterLabel"><%= form.label :password %></div>
			<%= form.password_field :password, :class => "TextBox RegisterBox", :onKeyPress=>"return submitOnEnter(this,event,2)"   %>
				<div style="clear:both; position:relative; height:10px; "></div>
			
		
			<div class="RegisterLabel"></div>
				<div class="RegisterBox">
			
					<div id="Error" style=" color:red; font-weight:bold">	
						<%= flash[:notice] || flash[:error] %>
					</div>
			
						<div id="registerbutton" unselectable="on" class="yellowButton noSelect" onclick="validateRegister()">Join</div>
					
					
					<div style="float:left; margin-top:10px; clear:both">
					</div>
				</div>
				
				<input type="hidden" name="fromPage" id="fromPage" value="<%=request.env['HTTP_REFERER']%>">	
				
		<% end %>
	
</div>

