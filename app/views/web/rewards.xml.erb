<records>
	<%for leader in @leaders%>
	<user>
		<id><%=leader.id%></id>
		<%if leader.avatar_file_name%>
			<%@name = leader.avatar_file_name%>
		<%else%>
			<%@name = ""%>
		<%end%>
		<file_name><%=leader.avatar_file_name%><%unless @name.include? '.'%>.<%end%></file_name>
		<name><%=leader.first_name%> <%=leader.last_name%></name>
		<score><%=leader.score%></score>
		<location><%=leader.hometown%></location>
		</user>
	<%end%>
</records>